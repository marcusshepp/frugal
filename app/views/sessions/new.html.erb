<div class="login">
  <div class="login-header">
    <h2>Frugal-Login</h2>
  </div>
	<%= form_for(:session, url: login_path) do |f|  %>


    	<%= f.label :email, class: 'input' %>
    	<%= f.email_field :email, class: 'input' %>


    	<%= f.label :password, class: 'input' %>
    	<%= f.password_field :password, class: 'input' %>


<%= f.submit "Log in", class: 'input-button' %>
<%= link_to "Create New Account", new_user_path, class: 'input' %>

	<% end %>
</div>
