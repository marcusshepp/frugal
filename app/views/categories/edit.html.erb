<div class="container" style="margin-top: -400px;">

    <%= form_for :category, :style => '
      background: #F9F9F9;
      padding: 25px;
      margin: 150px 0;
      box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);', url: category_path(@category), method: :patch do |f| %>
      <div class="item-header">
        <h3 style="margin-left:220px;">Editing Category</h3>
      </div>
      <% if @category.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@category.errors.count, "error") %> prohibited
            this budget from being saved:
          </h2>
          <ul>
            <% @category.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <p>
        <%= f.text_field :name, :style => "color: #4CAF50;border: 1px solid #aaa;"%>
      </p>
      <div style="text-align: center;">
        <p>
          <%= f.submit :style => "background: #4CAF50;"  %>
        </p>
        <% end %>
        <div style="padding-bottom: 5px;">
            <% if Item.select{ |i| i.category_id == @category.id }.length < 1 %>
                <%= button_to "Delete Category", @category, :method => :delete,:style => "background: #4CAF50;" %>
            <% end %>
        </div>
        <%= button_to 'Back', categories_path, :method => 'get', :style => "background: #4CAF50;"%>
      </div>

</div>
