<div class="item-header" style="margin-top: -200px;">
		<h1> Categories </h1>
</div>
<% if current_user %>
<div id="category-table">
  <table>
    <tr>
      <th>Category</th>
      <th>Edit Category</th>
    </tr>
    <% @categories.each do |category| %>
    <tr>
    <td><%= category.name %></td>
    <td><%= button_to 'Edit', edit_category_path(category), :class => 'button', :method => 'get'%></td>
  </tr>
  <% end %>

  <tr><td colspan="4" style="text-align:left;"><%= button_to "Create Category", new_category_path, :method => "get" %></td></tr>
  </table>
</div>
<% end %>
