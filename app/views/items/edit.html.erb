<h1>Editing Item</h1>

  <%= form_for :item, url: item_path(@item), method: :patch do |f| %>

  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@item.errors.count, "error") %> prohibited
        this item from being saved:
      </h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </p>
  <p>
    <%= f.select :category_id, options_for_select(Category.all.map{|c|[c.name, c.id]})%>
  </p>

  <p>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', item_path %>
