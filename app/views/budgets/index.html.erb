<div class="item-header">
		<h1> Budgets </h1>
</div>
<% if current_user %>
<div id="budgets-table">
  <table>
    <tr>
      <th>Budget</th>
      <th>Money Left</th>
      <th>Edit</th>
    </tr>
    <% @budgets.each do |budget| %>
  <tr>
    <td><%= budget.total_amount %></td>
    <td><%= budget.current_amount %></td>
		<td><%= button_to 'Edit Budget', edit_budget_path(budget), :class => 'button', :method => 'get', :class => 'input-button', :id => 'button-edit'%></td>

  </tr>
  <% end %>
	<% if !@budgets.present? %>
		<tr><td colspan="4"><%= button_to 'Create Budget', new_budget_path, :class => 'button', :method => 'get', :class => 'input-button'%></td></tr>
	<%end%>
  </table>
</div>

<% end %>
